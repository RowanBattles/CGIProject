@model CGI.Models.Journey

<h2>Delete Journey</h2>

<p>Are you sure you want to delete this journey?</p>

<table>
    <tr>
        <th>Journey ID</th>
        <td>@Model.Journey_ID</td>
    </tr>
    <tr>
        <th>User ID</th>
        <td>@Model.User_ID</td>
    </tr>
    <tr>
        <th>Total Distance</th>
        <td>@Model.Total_Distance</td>
    </tr>
    <tr>
        <th>Total Emission</th>
        <td>@Model.Total_Emission</td>
    </tr>
    <tr>
        <th>Start</th>
        <td>@Model.Start</td>
    </tr>
    <tr>
        <th>End</th>
        <td>@Model.End</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>@Model.Date.ToString("yyyy-MM-dd")</td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Journey_ID" />
    <button type="submit">Delete</button>
</form>

<a asp-action="Index">Cancel</a>