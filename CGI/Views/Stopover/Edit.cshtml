@model CGI.Models.Stopover


<div class="bg-gray-200 min-h-screen flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <h2 class="text-2xl font-bold mb-4">Edit Stopover</h2>

            <form method="post" action="@Url.Action("Edit")" class="space-y-6">
                @Html.AntiForgeryToken()

                <div class="space-y-1">
                    <label for="Distance" class="font-medium block">Distance:</label>
                    <input type="text" name="Distance" id="Distance" value="@Model.Distance" class="px-2 form-input rounded-md shadow-sm w-full" />
                </div>

                <div class="space-y-1">
                    <label for="VehicleType" class="font-medium block">Vehicle Type:</label>
                    <select asp-for="VehicleType" class="shadow appearance-none border border-black rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="vehicle" required>
                        <option value="Walking">Walking</option>
                        <option value="Bicycle">Bicycle</option>
                        <option value="EBicycle">E-Bicycle</option>
                        <option value="HCar">Hybrid Car</option>
                        <option value="DCar">Diesel Car</option>
                        <option value="GCar">Gasoline Car</option>
                        <option value="ECar">Electric Car</option>
                        <option value="EScooter">Electric Scooter</option>
                        <option value="GScooter">Gasoline Scooter</option>
                        <option value="DTrain">Diesel Train</option>
                        <option value="ETrain">Electric Train</option>
                        <option value="Bus">Bus</option>
                        <option value="Tram">Tram</option>
                        <option value="Metro">Metro</option>
                        <option value="GMotorcycle">Gasoline Motorcycle</option>
                    </select>
                </div>

                <div class="space-y-1">
                    <label for="StartingLocation" class="font-medium block">Starting Location:</label>
                    <input type="text" name="Start" id="Start" value="@Model.Start" class="px-2 form-input rounded-md shadow-sm w-full" />
                </div>

                <div class="space-y-1">
                    <label for="EndLocation" class="font-medium block">End Location:</label>
                    <input type="text" name="End" id="End" value="@Model.End" class="px-2 form-input rounded-md shadow-sm w-full" />
                </div>

                <input type="hidden" name="Stopover_ID" value="@Model.Stopover_ID" />

                <div>
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>